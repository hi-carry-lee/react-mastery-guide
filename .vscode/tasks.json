{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-2-react-ts-dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "2-react-ts", "dev"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*$",
          "endsPattern": "^.*ready in.*$"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
